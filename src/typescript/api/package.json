{
  "name": "@openerrata/api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "tsx --test \"test/unit/**/*.test.ts\"",
    "test:integration": "tsx test/integration/run-integration-tests.ts",
    "test:integration:raw": "tsx --test test/integration/api-endpoints.integration.test.ts",
    "test:integration:canary": "tsx --test test/integration/live-canary.test.ts",
    "refresh:fixtures:lesswrong": "tsx test/integration/refresh-lesswrong-fixtures.ts",
    "worker": "tsx --tsconfig tsconfig.runtime.json src/lib/services/worker-entrypoint.ts",
    "selector": "tsx --tsconfig tsconfig.runtime.json src/lib/services/selector-entrypoint.ts",
    "instance-api-key": "tsx --tsconfig tsconfig.runtime.json src/lib/services/instance-api-key-entrypoint.ts",
    "prisma:generate": "svelte-kit sync && prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test:unit:coverage": "c8 --config ../.c8rc.api.json tsx --test \"test/unit/**/*.test.ts\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.994.0",
    "@graphql-tools/schema": "^10.0.31",
    "@openerrata/shared": "workspace:*",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "@sveltejs/adapter-node": "^5.5.3",
    "@sveltejs/kit": "^2.52.2",
    "@trpc/server": "^11.10.0",
    "dotenv": "^17.3.1",
    "entities": "^6.0.1",
    "graphile-worker": "^0.16.6",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "graphql-yoga": "^5.18.0",
    "ipaddr.js": "^2.3.0",
    "openai": "^6.22.0",
    "parse5": "^8.0.0",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/pg": "^8.16.0",
    "prisma": "^7.4.1",
    "svelte": "^5.53.0",
    "svelte-check": "^4.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
