{
  "name": "@openerrata/extension",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build && pnpm verify:dist",
    "verify:dist": "node ./scripts/assert-build-artifacts.mjs",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.test.json",
    "test:unit": "tsx --test \"test/unit/**/*.test.ts\"",
    "test:e2e": "pnpm build && node ./scripts/run-playwright-e2e.mjs",
    "test:unit:coverage": "c8 --config ../.c8rc.extension.json tsx --test \"test/unit/**/*.test.ts\""
  },
  "dependencies": {
    "@openerrata/shared": "workspace:*",
    "@trpc/client": "^11.10.0",
    "@trpc/server": "^11.10.0",
    "dompurify": "^3.3.1",
    "ipaddr.js": "^2.3.0",
    "markdown-it": "^14.1.1",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/chrome": "^0.1.36",
    "@types/jsdom": "^27.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.3.0",
    "@types/webextension-polyfill": "^0.12.5",
    "jsdom": "^28.1.0",
    "svelte": "^5.53.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
