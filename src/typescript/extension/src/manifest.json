{
  "manifest_version": 3,
  "name": "OpenErrata",
  "version": "0.1.0",
  "description": "Crowdsourced, inline LLM investigations of the things you're reading.",
  "permissions": ["activeTab", "storage", "scripting", "webNavigation", "alarms"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.lesswrong.com/*", "https://lesswrong.com/*"],
      "js": ["content/main.js"],
      "css": ["content/annotations.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content/main.js"],
      "css": ["content/annotations.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.substack.com/p/*"],
      "js": ["content/main.js"],
      "css": ["content/annotations.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  }
}
